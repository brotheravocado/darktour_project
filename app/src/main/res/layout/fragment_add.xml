<?xml version="1.0" encoding="utf-8"?>
<!-- 윤지 add 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <!-- 상단부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="@drawable/topdropshadow"
        android:orientation="vertical">


        <!-- 지역을 선택하세요! linearlayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <!-- 위쪽 공간이 좁아서 간격 주기위해서 넣음 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="지역을 선택하세요!"
                android:textAlignment="center"
                android:layout_weight="5"
                android:textColor="#434344"
                android:textSize="25dp"
                android:gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>




    <!-- 하단 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/seoul_pic"
            android:background="#00000000"
            android:src="@drawable/seoul" />

        <ImageButton
            android:id="@+id/jeju_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/jeju" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/busan_pic"
            android:background="#00000000"
            android:src="@drawable/busan" />

        <!-- 비율 안맞아서 ImageButton으로 함 -->
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tobe_pic"
            android:background="#00000000"
            android:src="@drawable/tobecontinue" />


    </LinearLayout>



</LinearLayout>