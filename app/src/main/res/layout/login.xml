<?xml version="1.0" encoding="utf-8"?>
<!--로그인 화면-->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Login">

    <!--Login_text-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!--Login_text-->
        <TextView
            android:id="@+id/login2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:text="Login"
            android:textAppearance="@style/login" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--여행을 시작해볼까요?_text-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_ready1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <!--여행을 시작해볼까요?_text-->
        <TextView
            android:id="@+id/login_ready2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:text="여행을 시작해볼까요?"
            android:textAppearance="@style/login_ready" />

        <TextView
            android:id="@+id/login_ready3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--얇은 회색 선-->
        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31.91dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <!--이메일 입력 칸-->
        <EditText
            android:id="@+id/login_email"
            android:layout_width="345dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31.91dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_rectangle"
            android:hint="이메일"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80031925"
            android:textSize="14dp"></EditText>

        <!--비밀번호 입력 칸-->
        <EditText
            android:id="@+id/login_password"
            android:layout_width="345dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31.91dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_rectangle"
            android:hint="비밀번호"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#80031925"
            android:textSize="14dp"></EditText>

        <!--계정을 잊으셨나요?_text-->
        <TextView
            android:id="@+id/forgot"
            android:layout_width="99.61dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="276.29dp"
            android:layout_marginLeft="276.29dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="계정을 잊으셨나요?"
            android:textAppearance="@style/forgot" />

        <!--로그인 버튼-->
        <Button
            android:id="@+id/login_bt"
            android:layout_width="345dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31.91dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_rectangle"
            android:text="로그인"
            android:textColor="#80434344"
            android:textSize="15dp"></Button>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <!--회색선, 또는_text, 회색선-->
    <FrameLayout
        android:id="@+id/or"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31.91dp"
        android:layout_marginTop="10dp"
        android:background="#00000000">

        <!--얇은 회색 선-->
        <ImageView
            android:id="@+id/line2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="0dp"
            android:src="@drawable/line" />

        <!--또는_text-->
        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="또는"
            android:textAppearance="@style/login_ready" />

        <!--얇은 회색 선-->
        <ImageView
            android:id="@+id/line3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/line" />
    </FrameLayout>

    <!--카카오 로그인 버튼-->
    <Button
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31.91dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kakao"></Button>

    <!--계정이 없나요?_text-->
    <TextView
        android:id="@+id/none_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="계정이 없나요?"
        android:textAppearance="@style/login_ready" />

    <!--회원가입 버튼-->
    <Button
        android:id="@+id/signup_bt"
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31.91dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_rectangle"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="15dp"></Button>
</androidx.appcompat.widget.LinearLayoutCompat>